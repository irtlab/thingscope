{
  "name": "thingscope",
  "version": "0.0.1",
  "description": "Consumer Reports Privacy",
  "private": true,
  "author": "Artiom Baloian",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "api_start": "NODE_ENV=${NODE_ENV-production} node --experimental-specifier-resolution=node dist/server.js",
    "api_dev": "tsc && NODE_ENV=${NODE_ENV-development} node --experimental-specifier-resolution=node dist/server.js",
    "ws_start": "NODE_ENV=${NODE_ENV-production} node --experimental-specifier-resolution=node dist/websocket/ws_server.js",
    "ws_dev": "tsc && NODE_ENV=${NODE_ENV-development} node --experimental-specifier-resolution=node dist/websocket/ws_server.js"
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.2",
    "morgan": "1.9.1",
    "path": "^0.12.7",
    "pug": "2.0.3",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "typescript": "^4.0.3",
    "@types/node": "^14.11.7",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1"
  }
}
