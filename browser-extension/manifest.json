{
  "name": "ThingScope",
  "version": "1.0",
  "description": "ThingScope Extension!",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "declarativeContent",
    "notifications",
    "storage",
    "https://thingscope.cs.columbia.edu/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo_16.png",
      "32": "images/logo_32.png",
      "48": "images/logo_48.png",
      "128": "images/logo_128.png"
    }
  },
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "manifest_version": 2
}
